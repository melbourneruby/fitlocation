<h1>Locations#index</h1>
<%= render 'form' %>

<%= form_for @location, html: {id: 'autogen_new_location'} do |f| %>
  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :latitude %>  
  <%= f.label :category%>  
  <%= f.text_field :category, id:"autogen_category" %>
  <%= f.submit 'use my location' %>  
<% end %>

<ul>
  <% @locations.each do |location| %>
    <li>Address: <%= link_to location.address, location_path(location) %></li>
    <li>Longitude: <%= location.longitude %></li>
    <li>Latitude: <%= location.latitude %></li>
    <li>Category: <%= location.category %></li>
    <li id="location_<%=location.id%>"><%= link_to 'edit', edit_location_path(location) %> | <%= link_to 'delete', location, method: 'delete' %>  </li>
    <br/><br/>
  <% end %>
</ul>

<%= gmaps4rails(@json) %>  
